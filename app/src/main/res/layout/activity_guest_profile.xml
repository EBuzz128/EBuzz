<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFE0"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/guestprofile_back_btn"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/back_arrow"

            />

        <TextView
            android:id="@+id/guestprofile_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/guestprofile_back_btn"
            android:text="Guest Profile"
            android:textColor="#070707"
            android:textSize="26dp"
            android:textStyle="bold">

        </TextView>

        <Button
            android:id="@+id/guestprofile_logout_btn"
            android:layout_width="86dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#FFC000"
            android:padding="0dp"
            android:text="Log Out"
            android:textColor="#070707"
            android:textSize="16dp"
            android:textStyle="bold"
            app:cornerRadius="8dp">

        </Button>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/guestprofile_cover_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:background="#FFC000"
            >

        </ImageView>

<!--        <androidx.cardview.widget.CardView-->
<!--            android:layout_width="40dp"-->
<!--            android:layout_height="40dp"-->
<!--            android:layout_alignParentEnd="true"-->
<!--            android:layout_marginTop="80dp"-->
<!--            android:layout_marginEnd="50dp"-->
<!--            android:backgroundTint="#070707"-->
<!--            app:cardCornerRadius="50dp">-->

<!--            <ImageButton-->
<!--                android:id="@+id/guestprofile_edit_btn"-->
<!--                android:layout_width="40dp"-->
<!--                android:layout_height="40dp"-->
<!--                android:backgroundTint="#070707"-->
<!--                app:cornerRadius="30dp"-->
<!--                android:src="@drawable/pen_btn_white"-->
<!--                >-->

<!--            </ImageButton>-->

<!--        </androidx.cardview.widget.CardView>-->

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="44dp"
                >

                <ImageView
                    android:id="@+id/guestprofile_user_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher">

                </ImageView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/guestprofile_username_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Guest Name"
                android:textColor="#070707"
                android:textSize="20dp"
                android:textStyle="bold"
                >

            </TextView>


        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        >

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                >
                <!--                <Button-->
                <!--                    android:id="@+id/myprofile_notification_btn"-->
                <!--                    android:layout_width="wrap_content"-->
                <!--                    android:layout_height="40dp"-->
                <!--                    app:cornerRadius="6dp"-->
                <!--                    android:backgroundTint="#070707"-->
                <!--                    android:textColor="@color/white"-->
                <!--                    android:layout_marginLeft="10dp"-->
                <!--                    android:textSize="14dp"-->
                <!--                    android:text="Settings"-->
                <!--                    android:paddingLeft="10dp"-->
                <!--                    android:paddingRight="10dp"-->
                <!--                    android:clickable="true"-->
                <!--                    >-->
                <!--                </Button>-->

                <Button
                    android:id="@+id/guestprofile_settings_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:cornerRadius="6dp"
                    android:backgroundTint="#070707"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:text="Settings"
                    android:clickable="true"
                    >
                </Button>

                <Button
                    android:id="@+id/guestprofile_aboutme_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    app:cornerRadius="6dp"
                    android:backgroundTint="#FFC000"
                    android:textColor="#070707"
                    android:layout_marginLeft="10dp"
                    android:textSize="14dp"
                    android:text="About Me"
                    android:clickable="true"
                    >
                </Button>


            </LinearLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About Me:"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#070707"
            >

        </TextView>

        <TextView
            android:id="@+id/guestprofile_aboutme_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="62dp"
            android:text="This is my about section"
            android:layout_marginTop="4dp"
            >

        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This feature is not available in\nGuest Mode."
            android:textSize="16dp"
            android:layout_marginBottom="200dp"
            >

        </TextView>

    </LinearLayout>

</LinearLayout>