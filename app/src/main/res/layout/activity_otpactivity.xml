<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OTPActivity"
    android:background="#FFFFE0"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageButton
            android:id="@+id/otp_back_btn"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:src="@drawable/back_arrow"
            android:background="@android:color/transparent"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="40dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verification?"
            android:textSize="28dp"
            android:textColor="#070707"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_marginLeft="34dp"
            >
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We have sent you an OTP verification\ncode on your email address."
            android:textSize="16dp"
            android:textColor="@color/black"
            android:layout_gravity="left"
            android:layout_marginLeft="34dp"
            android:layout_marginTop="12dp"
            >
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="40dp"
        >

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/textbox_round_recycleview"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:textSize="30dp"
            android:textStyle="bold"
            >

        </EditText>

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/textbox_round_recycleview"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:textSize="30dp"
            android:textStyle="bold"
            >

        </EditText>

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/textbox_round_recycleview"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:textSize="30dp"
            android:textStyle="bold"
            >

        </EditText>

        <EditText
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/textbox_round_recycleview"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:textSize="30dp"
            android:textStyle="bold"
            >

        </EditText>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"

        >

        <Button
            android:id="@+id/otp_confirm_btn"
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:backgroundTint="#FFC000"
            android:text="Confirm"
            android:textColor="#070707"
            android:textSize="16dp"
            android:textStyle="bold"
            app:cornerRadius="8dp">

        </Button>

        <TextView
            android:id="@+id/otp_sendagain_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send code again"
            android:textSize="12dp"
            android:textColor="#070707"
            android:layout_marginTop="2dp"
            >

        </TextView>

    </LinearLayout>


</LinearLayout>