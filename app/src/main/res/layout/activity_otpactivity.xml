<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFE0"
    android:orientation="vertical"
    tools:context=".OTPActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/otp_back_btn"
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/back_button"
            android:src="@drawable/back_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="34dp"
            android:text="@string/verification"
            android:textColor="#070707"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="34dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="60dp"
            android:text="@string/verification_activity_description"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/otp_code_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/otp_code_num_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/textbox_round_recycleview"
            android:gravity="center_horizontal|center_vertical"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/otp_code_num_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/textbox_round_recycleview"
            android:gravity="center_horizontal|center_vertical"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/otp_code_num_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/textbox_round_recycleview"
            android:gravity="center_horizontal|center_vertical"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/otp_code_num_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/textbox_round_recycleview"
            android:gravity="center_horizontal|center_vertical"
            android:importantForAutofill="no"
            android:inputType="number"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"

        >

        <Button
            android:id="@+id/otp_confirm_btn"
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:backgroundTint="#FFC000"
            android:text="@string/confirm"
            android:textColor="#070707"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="8dp" />

        <TextView
            android:id="@+id/otp_sendagain_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/send_code_again"
            android:textColor="#070707"
            android:textSize="12sp" />

    </LinearLayout>

</LinearLayout>