<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_yellow"
    android:orientation="vertical"
    android:weightSum="100">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-28dp"
        android:backgroundTint="@color/dark_yellow"
        app:cardCornerRadius="34dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/deletepage_back_btn"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="50dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/back_button"
                android:src="@drawable/back_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginEnd="30dp"
                android:text="@string/delete_page"
                android:textColor="@color/bright_black"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="34dp"
                android:text="@string/delete_page_activity_description"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/deletepage_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="50dp"
            android:text="@string/verify_email"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/deletepage_email_txt"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/textbox_round_yellow"
            android:hint="@string/enter_email_address"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="34dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="50dp"
            android:text="@string/verify_password"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/deletepage_password_txt"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/textbox_round_yellow"
            android:hint="@string/enter_password"
            android:importantForAutofill="no"
            android:inputType="textPassword"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_color"
            />

        <Button
            android:id="@+id/deletepage_delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:backgroundTint="@color/bright_black"
            android:text="@string/delete_page"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="8dp">

        </Button>

    </LinearLayout>

</LinearLayout>