<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight="100"
    >

    <LinearLayout
        android:id="@+id/groups_layout_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="10dp"
            android:foreground="@drawable/textbox_round_recycleview"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="0dp"
                        android:layout_marginTop="10dp"
                        >

                        <ImageView
                            android:id="@+id/groups_groupimage_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_launcher">

                        </ImageView>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    >

                    <TextView
                        android:id="@+id/groups_groupname_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Groupname"
                        android:textColor="#070707"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        >

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    >

                    <Button
                        android:id="@+id/groups_leave_btn_1"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:backgroundTint="#070707"
                        android:clickable="true"
                        android:text="Leave Group"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        app:cornerRadius="4dp"
                        android:layout_marginBottom="10dp"
                        >

                    </Button>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/groups_layout_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="50"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:backgroundTint="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            android:foreground="@drawable/textbox_round_recycleview"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    >
                    <androidx.cardview.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="0dp"
                        android:layout_marginTop="10dp"
                        >

                        <ImageView
                            android:id="@+id/groups_groupimage_2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@mipmap/ic_launcher">

                        </ImageView>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    >

                    <TextView
                        android:id="@+id/groups_groupname_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Groupname"
                        android:textColor="#070707"
                        android:textSize="16dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        >

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    >

                    <Button
                        android:id="@+id/groups_leave_btn_2"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:backgroundTint="#070707"
                        android:clickable="true"
                        android:text="Leave Group"
                        android:textColor="@color/white"
                        android:textSize="12dp"
                        app:cornerRadius="4dp"
                        android:layout_marginBottom="10dp"
                        >

                    </Button>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>