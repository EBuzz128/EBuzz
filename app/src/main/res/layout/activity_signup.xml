<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="horizontal"
        android:gravity="top|center"
        >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/signup_animation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_fileName="animation_signup.json"
            app:lottie_loop="true"
            android:layout_marginBottom="-30dp"
            >
            <!--            app:lottie_autoPlay="true"-->

        </com.airbnb.lottie.LottieAnimationView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/signup_layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:orientation="vertical"
        android:gravity="top"
        android:background="#FFC000">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#070707"
            android:text="Get Started!"
            android:textSize="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp"
            android:textStyle="bold"
            >
        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#070707"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:text="Name"
            android:textSize="16dp"
            android:layout_marginTop="22dp"
            >

        </TextView>

        <EditText
            android:id="@+id/signup_name_txt"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/textbox_round_corners"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="30dp"
            android:hint="Enter Name"
            android:paddingLeft="12dp"
            >

        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:text="Email"
            android:textSize="16dp"
            >

        </TextView>

        <EditText
            android:id="@+id/signup_email_txt"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/textbox_round_corners"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="30dp"
            android:hint="Enter Email"
            android:paddingLeft="12dp"
            >

        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="16dp">

        </TextView>

        <EditText
            android:id="@+id/signup_password_txt"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/textbox_round_corners"
            android:hint="Enter Your password"
            android:paddingLeft="12dp">

        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password must be at least 8 characters long"
            android:textColor="@color/white"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="30dp"
            android:textSize="14dp"
            />

        <EditText
            android:id="@+id/signup_confirm_pass_txt"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/textbox_round_corners"
            android:hint="Confirm Your password"
            android:paddingLeft="12dp">

        </EditText>
        <Button
            android:id="@+id/signup_layout1_nextbtn"
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:backgroundTint="@color/white"
            android:text="Next"
            android:textColor="#070707"
            app:cornerRadius="8dp"
            android:textStyle="bold"
            android:textSize="16dp"
            >

        </Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?  "
                android:textColor="@color/white"
                >
            </TextView>

            <TextView
                android:id="@+id/signup_login_txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in"
                android:textColor="#070707"
                android:clickable="true"
                />

        </LinearLayout>

    </LinearLayout>







    <LinearLayout
        android:id="@+id/signup_layout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:background="#FFC000">


    <LinearLayout
        android:id="@+id/signup_layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top"
        android:background="#FFC000">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#070707"
            android:text="Personal Info!"
            android:textSize="32dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="6dp"
            android:textStyle="bold"
            >
        </TextView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#070707"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@color/white"
            android:text="Contact Number"
            android:textSize="16dp"
            android:layout_marginTop="22dp"
            >

        </TextView>

        <EditText
            android:id="@+id/signup_contact_txt"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/textbox_round_corners"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="30dp"
            android:hint="Enter Contact"
            android:paddingLeft="12dp"
            >

        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:text="Country"
            android:textSize="16dp"
            >

        </TextView>

        <Spinner
            android:id="@+id/signup_country_spinner"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/textbox_round_corners"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:text="City"
            android:textSize="16dp"
            >

        </TextView>

        <Spinner
            android:id="@+id/signup_city_spinner"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/textbox_round_corners"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:text="Age"
            android:textSize="16dp"
            >

        </TextView>

        <EditText
            android:id="@+id/signup_age_txt"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:background="@drawable/textbox_round_corners"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="30dp"
            android:hint="Enter Your Age"
            android:paddingLeft="12dp"
            >

        </EditText>


        <Button
            android:id="@+id/signup_layout1_signupbtn"
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:backgroundTint="@color/white"
            android:text="Sign Up"
            android:textColor="#070707"
            app:cornerRadius="8dp"
            android:textStyle="bold"
            android:textSize="16dp"
            >

        </Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account?  "
                android:textColor="@color/white"
                >
            </TextView>

            <TextView
                android:id="@+id/signup_login_txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in"
                android:textColor="#070707"
                android:clickable="true"
                />


        </LinearLayout>

    </LinearLayout>

    </LinearLayout>




</LinearLayout>