<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePageActivity"
    android:background="#FFFFE0"
    >

    <LinearLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/balsamiqsans_bold"
                android:text="Hello, "
                android:textColor="#070707"
                android:textSize="32dp">

            </TextView>

            <TextView
                android:id="@+id/homepage_username_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/balsamiqsans_bold"
                android:text="User"
                android:textColor="#FFC000"
                android:textSize="32dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/balsamiqsans_bold"
                android:text="We hope you like our new app, Team@Ebuzz"
                android:textColor="#070707"
                android:textSize="12dp">

            </TextView>

            <!--        android:text="Warm and Kind Greating form Team @Ebuzz"-->


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/homepage_notification_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="#070707"
                        android:clickable="true"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Notifications"
                        android:textColor="@color/white"
                        android:textSize="14dp"
                        app:cornerRadius="6dp">

                    </Button>

                    <Button
                        android:id="@+id/homepage_requests_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="#FFC000"
                        android:clickable="true"
                        android:text="Requests"
                        android:textColor="#070707"
                        android:textSize="14dp"
                        app:cornerRadius="6dp">

                    </Button>

                    <Button
                        android:id="@+id/homepage_groups_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:backgroundTint="#FFC000"
                        android:clickable="true"
                        android:text="Groups"
                        android:textColor="#070707"
                        android:textSize="14dp"
                        app:cornerRadius="6dp">

                    </Button>

                    <Button
                        android:id="@+id/homepage_pages_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:backgroundTint="#FFC000"
                        android:clickable="true"
                        android:text="Pages"
                        android:textColor="#070707"
                        android:textSize="14dp"
                        app:cornerRadius="6dp">

                    </Button>

                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>
    </LinearLayout>


