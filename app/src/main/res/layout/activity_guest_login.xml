<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#FFFFE0"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="horizontal"
        android:gravity="top|center"
        >

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/guest_login_animation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_fileName="animation_signup.json"
            app:lottie_loop="true"
            android:layout_marginBottom="-30dp"
            >
            <!--            app:lottie_autoPlay="true"-->

        </com.airbnb.lottie.LottieAnimationView>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/guest_login_layout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:background="#FFC000"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:text="Guest Login!"
            android:textColor="#070707"
            android:textSize="32dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="6dp"
            android:text="We only require your name to sign you in."
            android:textSize="14dp"
            android:textColor="#070707"
            >

        </TextView>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#070707" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="16dp">

        </TextView>

        <EditText
            android:id="@+id/guest_login_name_txt"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/textbox_round_corners"
            android:hint="Enter Name"
            android:paddingLeft="12dp">

        </EditText>


        <Button
            android:id="@+id/guest_login_getin_btn"
            android:layout_width="150dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/white"
            android:text="Get In"
            android:textColor="#070707"
            android:textSize="16dp"
            android:textStyle="bold"
            app:cornerRadius="8dp">

        </Button>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I want to create an account?  "
                android:textColor="@color/white"></TextView>

            <TextView
                android:id="@+id/guest_login_txt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:text="Log in"
                android:textColor="#070707" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>